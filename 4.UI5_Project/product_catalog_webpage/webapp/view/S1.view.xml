<mvc:View
    controllerName="productcatalogwebpage.controller.S1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Center"
        backgroundDesign="Standard"
    >
        <content>

        <VBox id="v1">
         <Input
                id="idProductName"
                placeholder="New Product"
                width="20rem"
                maxLength="40"
                class="sapUiTinyMarginEnd"
            />
        <ComboBox id="idCategory" placeholder="{i18n>category}">
        <items>
        <core:Item id="Cat0" key="0" text=""/>
        <core:Item id="Cat1" key="1" text="Food"/>
        <core:Item id="Cat2" key="2" text="Electronics"/>
        <core:Item id="Cat3" key="3" text="Beverages"/>
        </items>
        </ComboBox>

        <Input id="IdPrice" placeholder="{i18n>price}" type="Number" />
        <DatePicker id="release" placeholder="{i18n>Release}" />
        <DatePicker id="discontinued" placeholder="{i18n>discontinued}" />
        </VBox>
           
            <Button
                id="Submit"
                text="{i18n>button}"
                press="OnPressCreateNewProduct"
            />

            <!--delete is an event in the List and it is a del function-->
            <List
                id="idProductList"
                headerText="Product List"
                noDataText="No Data Avialable"
                backgroundDesign="Solid"
                delete="OnPressDelete"
            >
                <items>
                    <ObjectListItem
                        id="ListItem"
                        title="Macbook Air"
                        number="999"
                        numberUnit="Dollars"
                    >
                        <attributes>
                            <ObjectAttribute
                                id="A1"
                                title="Category"
                                text="Electronics"
                            />
                            <ObjectAttribute
                                id="A2"
                                title="Release Date"
                                text="01/01/2024"
                            />
                            <ObjectAttribute
                                id="A3"
                                title="Discontinued Date"
                                text="01/02/2024"
                            />
                        </attributes>

                        <firstStatus>
                            <ObjectStatus
                                id="OB1"
                                text="Available"
                                state="Success"
                            />
                        </firstStatus>
                    </ObjectListItem>
                </items>
            </List>
            
        </content>
    </Page>
</mvc:View>
